<p id="notice"><%= notice %></p>

<h1>Listing Vendas</h1>

<table>
  <thead>
    <tr>
      <th>Produto</th>
      <th>Cliente</th>
      <th>Quantidade</th>
      <th>Valorvenda</th>
      <th>Tipo pgt</th>
      <th>Num cartao</th>
      <th>Validade cartao</th>
      <th>Codigo cartao</th>
      <th>Desconto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vendas.each do |venda| %>
      <tr>
        <td><%= venda.produto_id %></td>
        <td><%= venda.cliente_id %></td>
        <td><%= venda.quantidade %></td>
        <td><%= venda.valorVenda %></td>
        <td><%= venda.tipo_pgt %></td>
        <td><%= venda.num_cartao %></td>
        <td><%= venda.validade_cartao %></td>
        <td><%= venda.codigo_cartao %></td>
        <td><%= venda.desconto %></td>
        <td><%= link_to 'Show', venda %></td>
        <td><%= link_to 'Edit', edit_venda_path(venda) %></td>
        <td><%= link_to 'Destroy', venda, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

